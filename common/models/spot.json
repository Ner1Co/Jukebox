{
  "name": "Spot",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "location": {
      "type": "geopoint",
      "required": false
    }
  ,
    "name":{
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "votes":{
      "type": "hasMany",
      "model": "Vote"
    },
    "suggestions":{
      "type": "hasMany",
      "model": "Suggestion"
    },
    "playedSongs":{
      "type": "hasMany",
      "model": "PlayedSong"
    }
  },
  "acls": [
    {
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "find"
    },
    {
    "principalType": "ROLE",
    "principalId": "$authenticated",
    "permission": "ALLOW",
    "property": "suggestionsWithSongs"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "playedSongs"
    }
  ],
  "methods": {}
}
